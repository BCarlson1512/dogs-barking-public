{
    "$schema": "https://json.schemastore.org/tsconfig",
    "display": "Default",
    "compilerOptions": {
        "target": "ESNext",
        "downlevelIteration": true,
        "allowJs": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "resolveJsonModule": false,
        "baseUrl": "./src"
    },
    "exclude": ["node_modules", "*.js", "*.test.ts"]
}
